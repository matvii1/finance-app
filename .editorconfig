# EditorConfig helps maintain consistent coding styles across various editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100


# JSON files
[*.json]
insert_final_newline = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# CSS, SCSS, LESS
[*.{css,scss,less}]
indent_size = 2

# HTML, XML
[*.{html,xml}]
indent_size = 2

# JavaScript, TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf

# Windows-specific files
[*.{cmd,bat}]
end_of_line = crlf
